<div class="containter">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rounded-0">
        <form action="/task/{{task._id}}/edit" method="POST">
        <h1>Update A Task</h1>
          <div class="mb-3">
            <input
              type="text"
              name="title"
              placeholder="Title"
              value="{{task.title}}"
              class="form-control rounded-0 bg-info text-dark"
            />
          </div>

          <div class="mb-3">
            <textarea
              name="description"
              rows="3"
              placeholder="Add a Description"
              class="form-control rounded-0 bg-info text-dark"
            >{{task.description}}</textarea>
          </div>

          <button class="btn btn-primary">Update</button>

        </form>
      </div>
    </div>
  </div>
</div>